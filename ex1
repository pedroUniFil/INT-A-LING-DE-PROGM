import java.util.Scanner;

public class EXERCICIO1 {
     public static void main(String[] args) {
        float numer[] = new float[10], negativos = 0, positivos = 0;
        Scanner scanner = new Scanner(System.in);
        for (int cont = 0; cont < 10; cont++) {
            System.out.print("Insira " + (cont + 1) + " nÃºmero Real: ");
            numer[cont] = scanner.nextFloat();
            if (numer[cont] >= 0) {
                positivos = positivos + numer[cont];
            } else {
                ++negativos;
            }
        }  if (negativos > 0) {
            System.out.println("quantidade de numeros reais negativos: " + negativos);
        }  if (positivos > 0) {
            System.out.println("soma dos numeros positivos: " + positivos);
        }

    }
}
